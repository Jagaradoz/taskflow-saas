{
  "name": "taskflow",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:backend": "pnpm --filter @taskflow/backend dev",
    "dev:frontend": "pnpm --filter @taskflow/frontend dev",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "services:up": "docker compose up -d",
    "services:down": "docker compose down",
    "services:reset": "docker compose down -v && docker compose up -d",
    "db:setup": "pnpm --filter @taskflow/backend run db:setup",
    "db:reset": "pnpm run services:reset && pnpm run db:setup"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}